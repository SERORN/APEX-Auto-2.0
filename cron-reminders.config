# Configuración de cron jobs para ToothPick
# Recordatorios de citas dentales automatizados

# Ejecutar recordatorios todos los días a las 8:00 AM
# Formato: minuto hora día_del_mes mes día_de_la_semana comando
0 8 * * * curl -X POST -H "Authorization: Bearer ${CRON_SECRET}" http://localhost:3000/api/cron/reminders

# Ejecutar limpiezas de recordatorios fallidos cada 2 horas
0 */2 * * * curl -X POST -H "Authorization: Bearer ${CRON_SECRET}" http://localhost:3000/api/cron/reminders

# Para producción (reemplazar localhost:3000 con tu dominio)
# 0 8 * * * curl -X POST -H "Authorization: Bearer ${CRON_SECRET}" https://toothpick.mx/api/cron/reminders

# Para usar con PM2 (ecosystem.json)
{
  "apps": [{
    "name": "toothpick-reminders",
    "script": "node",
    "args": ["-e", "fetch('http://localhost:3000/api/cron/reminders', { method: 'POST', headers: { 'Authorization': 'Bearer ${process.env.CRON_SECRET}' } })"],
    "cron_restart": "0 8 * * *",
    "watch": false,
    "autorestart": false
  }]
}

# Para usar con node-cron en la aplicación
# Ver: lib/services/CronService.ts para implementación interna
