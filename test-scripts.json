{
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:api": "jest tests/api --verbose",
    "test:components": "jest tests/components --verbose",
    "test:services": "jest tests/services --verbose", 
    "test:utils": "jest tests/utils --verbose",
    "test:integration": "jest tests/integration --verbose",
    "test:e2e": "jest tests/e2e --verbose --runInBand",
    "test:unit": "jest --testPathIgnorePatterns=tests/integration tests/e2e",
    "test:changed": "jest --onlyChanged",
    "test:related": "jest --findRelatedTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:clear": "jest --clearCache",
    "test:update": "jest --updateSnapshot",
    "test:silent": "jest --silent",
    "test:verbose": "jest --verbose",
    "test:bail": "jest --bail",
    "test:parallel": "jest --maxWorkers=4",
    "test:invoice": "jest --testNamePattern=\"Invoice\" --verbose",
    "test:cfdi": "jest --testNamePattern=\"CFDI\" --verbose",
    "test:facturama": "jest --testNamePattern=\"Facturama\" --verbose"
  }
}
