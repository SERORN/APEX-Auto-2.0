# Environment variables for production deployment
# Copy this to .env.prod and fill with actual values

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Security
SECRET_KEY=your_super_secret_jwt_key_minimum_32_characters
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# External Services
SENTRY_DSN=https://your_sentry_dsn_here
GRAFANA_PASSWORD=your_grafana_admin_password

# Payments & Financial APIs
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
BANXICO_TOKEN=your_banxico_api_token

# SAT/CFDI Configuration
SAT_CERTIFICATE_PATH=/certificates/certificate.cer
SAT_PRIVATE_KEY_PATH=/certificates/private_key.key
SAT_PASSPHRASE=your_certificate_passphrase

# Email Service
SMTP_HOST=smtp.mailgun.org
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=apex-platform-uploads
AWS_REGION=us-east-1

# Backup Configuration
BACKUP_S3_BUCKET=apex-platform-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Domain Configuration
PRIMARY_DOMAIN=apex.com.mx
API_DOMAIN=api.apex.com.mx
APP_DOMAIN=app.apex.com.mx
